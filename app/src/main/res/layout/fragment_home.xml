<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/over_all_bg_color"
    tools:context="Fragments.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"

            />


        <ImageView
            android:id="@+id/pumplogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/view"
            android:scaleType="centerInside"
            android:src="@drawable/shelllogotwo" />


        <TextView
            android:id="@+id/time_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/pumplogo"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="Obote Denis"
            android:textColor="#5A778C"
            android:textSize="25sp"
            android:transitionName="logo_text"

            />

        <TextView
            android:id="@+id/time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pumplogo"
            android:fontFamily="@font/montserrat"
            android:includeFontPadding="false"
            android:text="Pump Attendant"
            android:textColor="@color/black"
            android:layout_below="@+id/time_clock"
            android:textSize="17sp"
            android:transitionName="logo_desc" />


        <RelativeLayout
            android:id="@+id/shift_progress"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/time_date"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="@color/gold_on_green_text"
            android:clickable="true"
            android:padding="20dp">

            <TextView
                android:id="@+id/day_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/day_shift_time"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:text="Progress Update"
                android:textColor="#5A778C"
                android:textSize="17sp"
                android:transitionName="logo_desc" />

            <TextView
                android:id="@+id/day_shift_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="1/3 Complete"
                android:textColor="#85A3B9"
                android:textSize="17sp"
                android:transitionName="logo_desc" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_fluent_phone_update_checkmark_20_filled" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/start_shift_layout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/shift_progress"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_bg"
            android:padding="20dp">

            <TextView
                android:id="@+id/night_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/night_shift_time"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:text="Start Shift"
                android:textColor="#5A778C"
                android:textSize="17sp"
                android:transitionName="logo_desc" />

            <TextView
                android:id="@+id/night_shift_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="Create Initial Readings"
                android:textColor="#85A3B9"
                android:textSize="17sp"
                android:transitionName="logo_desc" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_fluent_shifts_add_20_filled" />


        </RelativeLayout>






    </RelativeLayout>

</ScrollView>
